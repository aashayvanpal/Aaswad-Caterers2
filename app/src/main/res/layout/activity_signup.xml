<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

        <TextView
            android:id="@+id/textView"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Sign Up"
            android:textColor="@android:color/black"
            android:textSize="19sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="40dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edName"
            android:layout_alignBottom="@+id/edName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="22dp"
            android:text="Name"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/edName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edEmail"
            android:layout_below="@+id/textView"
            android:layout_marginTop="17dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/edName"
            android:layout_marginTop="25dp"
            android:text="Email"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/edEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignStart="@+id/edPassword"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/edPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edEmail"
            android:layout_marginStart="14dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@+id/textView5"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edPassword"
            android:layout_alignBottom="@+id/edPassword"
            android:layout_alignStart="@+id/textView4"
            android:text="Password"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/edPassword"
            android:layout_marginTop="39dp"
            android:text="Mobile"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/edMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignStart="@+id/edPassword"
            android:ems="10"
            android:inputType="phone"
            android:maxLength="10"
            android:singleLine="true" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/edMobile"
            android:layout_marginTop="40dp"
            android:text="Address"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/edAddrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignStart="@+id/edMobile"
            android:ems="10"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/textsrn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edAddrs"
            android:layout_alignStart="@+id/textView6"
            android:layout_marginTop="40dp"
            android:text="ID Number"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/edsrn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edAddrs"
            android:layout_alignBottom="@+id/textView7"
            android:layout_marginStart="-4dp"
            android:layout_marginBottom="-67dp"
            android:ems="10"
            android:inputType="textMultiLine" />

        <!--    <Button-->
        <!--        android:id="@+id/btnSignup"-->
        <!--        android:layout_width="200dp"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:layout_alignParentBottom="true"-->
        <!--        android:background="@android:color/holo_blue_light"-->
        <!--        android:onClick="signUp"-->
        <!--        android:padding="3dp"-->
        <!--        android:text="Sign Up"-->
        <!--        android:textStyle="bold" />-->

        <Button
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/radio"

            android:background="@android:color/holo_blue_light"
            android:focusableInTouchMode="false"
            android:onClick="signUp"
            android:text="Sign Up"
            android:textColor="@android:color/white" />

        <!--    <Button-->
        <!--        android:id="@+id/btnCancel"-->
        <!--        android:layout_width="200dp"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:layout_alignParentBottom="true"-->
        <!--        android:layout_alignParentEnd="true"-->
        <!--        android:onClick="Cancelto"-->
        <!--        android:text="Cancel" />-->

        <RadioGroup
            android:id="@+id/radio"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/edsrn"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            >

            <RadioButton

                android:id="@+id/teacher"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:text="Teacher"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/student"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginBottom="1dp"
                android:checked="true"
                android:text="Student"
                android:textAlignment="center" />

        </RadioGroup>



</RelativeLayout>